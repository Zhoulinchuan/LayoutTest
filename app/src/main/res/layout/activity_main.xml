<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zlc.layouttest.MainActivity">

    <TextView
        android:id="@+id/tv_number2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请输入电话号码" />

    <EditText
        android:id="@+id/et_number2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入电话号码"
        android:layout_below="@id/tv_number2"/>

    <Button
        android:id="@+id/btn_call_2_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="拨打"
        android:layout_below="@id/et_number2"/>

    <Button
        android:id="@+id/btn_call_2_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="拨打"
        android:layout_toRightOf="@id/btn_call_2_1"
        android:layout_below="@id/et_number2"/>
</RelativeLayout>
